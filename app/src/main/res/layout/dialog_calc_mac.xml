<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/way_of_encryption" />

        <RadioGroup
            android:id="@+id/mode_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/mac_wkey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wkey" />

            <RadioButton
                android:id="@+id/mac_pkey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pkey" />

            <RadioButton
                android:id="@+id/mac_pkey_sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pkey_sr" />

            <RadioButton
                android:id="@+id/mac_sm4_wkey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sm4_wkey" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/mac_encryption_algorithm" />

        <RadioGroup
            android:id="@+id/mac_encrypt_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/mac_encrypt_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x99_algorithm" />

            <RadioButton
                android:id="@+id/mac_encrypt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extension_algorithm" />

            <RadioButton
                android:id="@+id/mac_encrypt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cup_ecb_algorithm" />

            <RadioButton
                android:id="@+id/mac_encrypt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x919_algorithm" />

            <RadioButton
                android:id="@+id/mac_encrypt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x91900_algorithm" />

            <RadioButton
                android:id="@+id/mac_encrypt_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_payment_algorithm" />

            <RadioButton
                android:id="@+id/mac_encrypt_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xor_3des_algorithm" />

            <RadioButton
                android:id="@+id/mac_encrypt_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sm_algorithm" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/wkey_index" />

        <EditText
            android:id="@+id/input_windex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/be_encrypted_data" />

        <EditText
            android:id="@+id/input_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="F40379AB9E0EC533F40379AB9E0EC533" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#c6c6c6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/alertdialog_left_selector"
                android:gravity="center"
                android:text="@string/ok" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="43dp"
                android:background="#c6c6c6" />

            <Button
                android:id="@+id/btn_neg"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/alertdialog_right_selector"
                android:gravity="center"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>